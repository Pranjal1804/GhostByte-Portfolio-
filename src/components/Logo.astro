---
const logoText = "GhostByte.in"; // Replace this with your desired logo text
const letters = logoText.split(''); // Split the text into individual letters
---
/*
<style>
  .logo {
    display: inline-block;
    font-size: 3rem;
    font-weight: bold;
    color: #ffffff;
  }

  .logo span {
    display: inline-block;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.5s forwards;
  }
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<div class="logo">
  {letters.map((letter, index) => (
    <span style={`animation-delay: ${index * 0.1}s`}>{letter}</span>
  ))}
</div>
